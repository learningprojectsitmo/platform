<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lp_invitation_bachelor_form" model="ir.ui.view">
            <field name="name">Детали приглашения бакалавра</field>
            <field name="model">lp.invitation.bachelor</field>
            <field name="arch" type="xml">
                <form string="Отклики">
                    <header>
                        <field name="invited_status" invisible="True"/>
                        <button name="action_send_invitation" string="Отправить" type="object" attrs="{'invisible': [('invited_status', 'not in', 'draft')]}"
                                groups="learning_projects.lp_group_bachelor"/>
                        <button name="action_draft_invitation" string="Сделать черновиком" type="object" attrs="{'invisible': [('invited_status', 'not in', ['waiting', 'invited_all'])]}"
                                groups="learning_projects.lp_group_bachelor"/>
                    </header>
                    <sheet>
                        <group string="Информация о студенте">
                            <field name="priority" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                            <field name="project_id" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                            <field name="resume" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                            <field name="motivation" widget="html" options="{'collaborative': true}" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                            <field name="resume_author"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="lp_invitation_bachelor_tree" model="ir.ui.view">
            <field name="name">Приглашения бакалавров</field>
            <field name="model">lp.invitation.bachelor</field>
            <field name="arch" type="xml">
                <tree string="Own Invitations Tree">
                    <field name="priority" widget="handle"  groups="learning_projects.lp_group_bachelor" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                    <field name="priority" groups="learning_projects.lp_group_lecturer,learning_projects.lp_group_admin,learning_projects.lp_group_master" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                    <field name="project_id" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                    <field name="resume" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                    <field name="number_groups" attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                    <field name="invited_status" widget="badge" decoration-success="invited_status  in ('invited', 'invited_for_other_priority')"
                           decoration-info="invited_status not in ('invited_all', 'draft')"  attrs="{'readonly':[('invited_status','!=','draft')]}"/>
                </tree>
            </field>
        </record>

        <record id="view_lp_invitation_bachelor_filter" model="ir.ui.view">
            <field name="name">lp.invitation.bachelor</field>
            <field name="model">lp.invitation.bachelor</field>
            <field name="arch" type="xml">
                <search string="Search Project">
                    <field name="project_id" string="Проект"/>
                    <field name="number_groups" string="Проект"/>
                    <group expand="0" string="Group By">
                        <filter string="Проект" name="group_project_id" context="{'group_by': 'project_id'}" groups="learning_projects.lp_group_lecturer,learning_projects.lp_group_admin,learning_projects.lp_group_master"/>
                        <filter string="Резюме" name="group_resume" context="{'group_by': 'resume'}" groups="learning_projects.lp_group_lecturer,learning_projects.lp_group_admin,learning_projects.lp_group_master"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_nocontent_lp_invitation_bachelor" model="ir.actions.act_window">
            <field name="name">Приглашения бакалавров</field>
            <field name="res_model">lp.invitation.bachelor</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    You haven't created any invitation yet.
                </p>
            </field>
        </record>

        <record id="action_nocontent_lp_invitation" model="ir.actions.act_window">
            <field name="name">Приглашения бакалавров</field>
            <field name="res_model">lp.invitation.bachelor</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid', '!=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    You haven't created any invitation yet.
                </p>
            </field>
        </record>
    </data>
</odoo>